@using MauiApp2.Pages;


<Router AppAssembly="@typeof(Main).Assembly">
	<Found Context="routeData">
		@if (routeData.PageType == typeof(Login) || routeData.PageType == typeof(Register) || routeData.PageType == typeof(Verification) || routeData.PageType == typeof(UserTypeSelection) || routeData.PageType == typeof(SellerLogin) || routeData.PageType == typeof(SellerRegister))
		{
			<LayoutView Layout="@typeof(StartupLayout)">
					<RouteView RouteData="@routeData" />
			</LayoutView>
		}
		else
		{
			<RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
			<FocusOnNavigate RouteData="@routeData" Selector="h1" />
		}
			
	</Found>
	<NotFound>
		<LayoutView Layout="@typeof(MainLayout)">
			<p role="alert">Sorry, there's nothing at this address.</p>
		</LayoutView>
	</NotFound>
</Router>