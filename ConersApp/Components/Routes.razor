@using ConersApp.Components.Layout
@using ConersApp.Components.Pages
@using ConersApp.Components.Pages.Buyer
@using ConersApp.Components.Pages.Seller



<Router AppAssembly="@typeof(MauiProgram).Assembly">
	<Found Context="routeData">
		@if (routeData.PageType == typeof(Login) || routeData.PageType == typeof(Register) || routeData.PageType == typeof(Verification) || routeData.PageType == typeof(PrePasswordReset) || routeData.PageType == typeof(PasswordReset) || routeData.PageType == typeof(UserTypeSelection) || routeData.PageType == typeof(SellerLogin) || routeData.PageType == typeof(SellerRegister))
		{
			<LayoutView Layout="@typeof(StartupLayout)">
				<RouteView RouteData="@routeData" />
			</LayoutView>
		}
		else
		{
			<RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
			<FocusOnNavigate RouteData="@routeData" Selector="h1" />
		}
	</Found>
	<NotFound>
		<LayoutView Layout="@typeof(StartupLayout)">
			<p role="alert">Sorry, there's nothing at this address.</p>
		</LayoutView>
	</NotFound>
</Router>
